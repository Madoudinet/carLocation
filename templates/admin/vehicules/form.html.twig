{% extends 'base.html.twig' %}

{% block title %}
{% if editMode %}
        Modifier
    {% else %}
        Ajouter
    {% endif %}
        un vehicule
{% endblock %}


{% block body %}

<h1 class="text-center my-4">
{% if editMode %}
    Modifier
{% else %}
    Ajouter
{% endif %}
un vehicule</h1>

<div class="container">
{{ form_start(form, {
        attr: { novalidate: 'novalidate'}
    }) }}
{{ form_row(form.marque) }}
{{ form_row(form.modele) }}
{{ form_row(form.description) }}
{{ form_row(form.photo) }}
{{ form_row(form.prix_journalier) }}
{{ form_row(form.date_enregistrement) }}
<button type="submit" class="btn btn-primary">Envoyer</button>
{{ form_end(form) }}
</div>

{% endblock %}
